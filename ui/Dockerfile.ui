# Stage 1: build
FROM node:20-slim AS build

WORKDIR /app

# Copia package.json e package-lock.json para cache
COPY package*.json ./

# Instala dependências
RUN npm install

# Copia todo o código da UI
COPY . .

# Build da aplicação
RUN npm run build

# Stage 2: produção
FROM nginx:alpine

# Copia build para Nginx
COPY --from=build /app/dist /usr/share/nginx/html

# Expõe porta 80
EXPOSE 80

# Comando padrão
CMD ["nginx", "-g", "daemon off;"]